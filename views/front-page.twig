{% extends 'base.twig' %}
{% block content %}
    {% include 'components/hero.twig' with {
        'title': homepage.title,
        'background_image': homepage.hero_background_image,
    } %}
    {% include 'components/about.twig' with {
        'title': homepage.about_me_title,
        'description': homepage.about_me_description,
        'image': homepage.about_me_image
    } %}
    {% include 'components/exhibitions.twig' with {
        'title': homepage.exhibitions_title,
        'description': homepage.exhibitions_description,
        'see_more_text': see_more_text,
        'see_less_text': see_less_text,
    } %}
    {% include 'components/gallery.twig' with {
        'title': homepage.gallery_title,
        'gallery': homepage.gallery,
    } %}
    {% include 'components/videos.twig' with {
        'title': homepage.videos_title,
        'videos': homepage.videos,
    } %}
{% endblock %}
